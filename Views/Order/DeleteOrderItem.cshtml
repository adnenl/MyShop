@model OrderItem

<h2>Delete OrderItem</h2>

<h3>Are you sure you want to delete this OrderItem?</h3>
<div>
    <h4>OrderItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">OrderItemId</dt>
        <dd class="col-sm-10">@Model.OrderItemId</dd>

        <dt class="col-sm-2">ItemId</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>

        <dt class="col-sm-2">Item</dt>
        <dd class="col-sm-10">@Model.Item.Name</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">OrderItemPrice</dt>
        <dd class="col-sm-10">@Model.OrderItemPrice</dd>
    </dl>

    <form asp-action="DeleteOrderItemConfirmed" asp-route-id="@Model.OrderItemId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>